<Window x:Class="QuanLySinhVien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:QuanLySinhVien"
        mc:Ignorable="d"
        Title="Quản lý sinh viên - Đại học Quy Nhơn"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style sidebar -->
        <Style TargetType="Button" x:Key="SidebarButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#334155"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="#1E3A8A"
                CornerRadius="20,0,0,20">
            <StackPanel Margin="15,20">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                    <Image Source="D:\QuanLySinhVien\QuanLySinhVien\Images/logo_dhqn.jpg"
                           Width="50" Height="50"
                           Stretch="Uniform"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="Trường Đại học&#x0a;Quy Nhơn"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="15"/>
                </StackPanel>

                <!-- MENU -->
                <StackPanel>
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnDanhMuc_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="List" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý danh mục"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnLopHocPhan_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="University" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý lớp học phần"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnDangKy_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Clipboard" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý đăng ký học phần"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnLichThi_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Calendar" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý lịch thi"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnNguoiDung_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Users" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý người dùng"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnDiem_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="LineChart" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý điểm"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnBaoCao_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="FileText" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Thống kê - Báo cáo"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="0,20,0,10" Background="White" Height="1"/>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnThoat_Click" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="SignOut" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Thoát" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- KHU NỘI DUNG -->
        <Border Grid.Column="1" Background="#F9FAFB" CornerRadius="10" Margin="10">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>
