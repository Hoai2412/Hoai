<UserControl x:Class="QuanLySinhVien.QuanLyLichThi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F9FAFB">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="CalendarClockOutline"
                                     Foreground="#1E3A8A"
                                     Width="30" Height="30"
                                     Margin="0,0,10,0"/>
            <TextBlock Text="QUẢN LÝ LỊCH THI"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#1E3A8A"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- KHUNG CHÍNH -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="25"
                BorderBrush="#E2E8F0"
                BorderThickness="1">

            <StackPanel>

                <!-- FORM NHẬP -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Học kỳ -->
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Học kỳ:" FontWeight="Bold"/>
                        <ComboBox x:Name="cbHocKy" Height="30">
                            <ComboBoxItem Content="Học kỳ 1 - Năm học 2025-2026"/>
                            <ComboBoxItem Content="Học kỳ 2 - Năm học 2025-2026"/>
                            <ComboBoxItem Content="Học kỳ hè - Năm học 2025-2026"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Ngày thi -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Ngày thi:" FontWeight="Bold"/>
                        <DatePicker x:Name="dpNgayThi" Height="30"/>
                    </StackPanel>
                </Grid>

                <!-- THÔNG TIN MÔN & PHÒNG -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Môn thi:" FontWeight="Bold"/>
                        <TextBox x:Name="txtMonThi" Height="30" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Phòng thi:" FontWeight="Bold"/>
                        <TextBox x:Name="txtPhongThi" Height="30" Padding="5"/>
                    </StackPanel>
                </Grid>

                <!-- CA & GIÁM THỊ -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Ca thi (VD: Ca 1 - 7h30):" FontWeight="Bold"/>
                        <TextBox x:Name="txtCaThi" Height="30" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Giám thị:" FontWeight="Bold"/>
                        <TextBox x:Name="txtGiamThi" Height="30" Padding="5"/>
                    </StackPanel>
                </Grid>

                <!-- DANH SÁCH LỊCH THI -->
                <DataGrid x:Name="dgLichThi"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F1F5F9"
                          RowHeight="38"
                          GridLinesVisibility="Horizontal"
                          BorderBrush="#E2E8F0"
                          BorderThickness="1"
                          Background="White"
                          FontSize="14"
                          Margin="0,0,0,15">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Học kỳ" Binding="{Binding HocKy}" Width="2*"/>
                        <DataGridTextColumn Header="Môn thi" Binding="{Binding MonThi}" Width="2*"/>
                        <DataGridTextColumn Header="Ngày thi" Binding="{Binding NgayThi}" Width="*"/>
                        <DataGridTextColumn Header="Ca thi" Binding="{Binding CaThi}" Width="*"/>
                        <DataGridTextColumn Header="Phòng thi" Binding="{Binding PhongThi}" Width="*"/>
                        <DataGridTextColumn Header="Giám thị" Binding="{Binding GiamThi}" Width="2*"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- NÚT CHỨC NĂNG -->
                <UniformGrid Columns="4" HorizontalAlignment="Center">
                    <Button Content="Thêm" Width="150" Height="38"
                            Background="#2563EB" Foreground="White" FontWeight="Bold"
                            Margin="5" Click="BtnThem_Click"/>
                    <Button Content="Sửa" Width="150" Height="38"
                            Background="#F59E0B" Foreground="White" FontWeight="Bold"
                            Margin="5" Click="BtnSua_Click"/>
                    <Button Content="Xóa" Width="150" Height="38"
                            Background="#DC2626" Foreground="White" FontWeight="Bold"
                            Margin="5" Click="BtnXoa_Click"/>
                    <Button Content="Công bố lịch thi" Width="150" Height="38"
                            Background="#16A34A" Foreground="White" FontWeight="Bold"
                            Margin="5" Click="BtnCongBo_Click"/>
                </UniformGrid>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
