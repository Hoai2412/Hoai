<UserControl x:Class="QuanLySinhVien.QuanLyDiem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F9FAFB">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="FileChartOutline"
                                     Foreground="#1E3A8A"
                                     Width="30" Height="30"
                                     Margin="0,0,10,0"/>
            <TextBlock Text="QUẢN LÝ SỔ ĐIỂM"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#1E3A8A"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- KHUNG CHÍNH -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="25"
                BorderBrush="#E2E8F0"
                BorderThickness="1">

            <StackPanel>

                <!-- CHỌN LỚP HỌC PHẦN -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                    <TextBlock Text="Chọn lớp học phần:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cbLopHocPhan" Width="300" Height="32" SelectionChanged="cbLopHocPhan_SelectionChanged"/>
                </StackPanel>

                <!-- DANH SÁCH SỔ ĐIỂM -->
                <DataGrid x:Name="dgSoDiem"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#F1F5F9"
                          RowHeight="36"
                          GridLinesVisibility="Horizontal"
                          BorderBrush="#E2E8F0"
                          BorderThickness="1"
                          Background="White"
                          FontSize="14"
                          Margin="0,0,0,15">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã sinh viên" Binding="{Binding MaSV}" Width="1.2*"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="2*"/>
                        <DataGridTextColumn Header="Điểm giữa kỳ" Binding="{Binding DiemGK}" Width="*"/>
                        <DataGridTextColumn Header="Điểm cuối kỳ" Binding="{Binding DiemCK}" Width="*"/>
                        <DataGridTextColumn Header="Điểm tổng kết" Binding="{Binding DiemTK}" Width="*"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- NÚT CHỨC NĂNG -->
                <UniformGrid Columns="3" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Mở khóa sổ điểm"
                            Width="180" Height="38"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="5"
                            Click="BtnMoKhoa_Click"/>

                    <Button Content="Khóa sổ điểm"
                            Width="180" Height="38"
                            Background="#DC2626"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="5"
                            Click="BtnKhoa_Click"/>

                    <Button Content="Xem nhật ký thay đổi"
                            Width="180" Height="38"
                            Background="#F59E0B"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="5"
                            Click="BtnNhatKy_Click"/>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
