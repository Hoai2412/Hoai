<UserControl x:Class="QuanLySinhVien.QuanLyDanhMuc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F9FAFB">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== TIÊU ĐỀ ===== -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="DatabaseCogOutline"
                                     Foreground="#1E3A8A"
                                     Width="30" Height="30"
                                     Margin="0,0,10,0"/>
            <TextBlock Text="QUẢN LÝ DANH MỤC"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#1E3A8A"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ===== KHUNG CHÍNH ===== -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="25"
                BorderBrush="#E2E8F0"
                BorderThickness="1">

            <StackPanel>

                <!-- LỰA CHỌN LOẠI DANH MỤC -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                    <TextBlock Text="Loại danh mục: " FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cbLoaiDanhMuc"
                              Width="250"
                              Height="34"
                              SelectedIndex="0"
                              SelectionChanged="cbLoaiDanhMuc_SelectionChanged">
                        <ComboBoxItem Content="Khoa"/>
                        <ComboBoxItem Content="Ngành"/>
                        <ComboBoxItem Content="Môn học"/>
                        <ComboBoxItem Content="Học kỳ"/>
                    </ComboBox>
                </StackPanel>

                <!-- FORM NHẬP THÔNG TIN -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Mã danh mục:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaDanhMuc"
                                 Height="30"
                                 Padding="5"
                                 BorderBrush="#CBD5E1"
                                 BorderThickness="1" TextChanged="txtMaDanhMuc_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Tên danh mục:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTenDanhMuc"
                                 Height="30"
                                 Padding="5"
                                 BorderBrush="#CBD5E1"
                                 BorderThickness="1" TextChanged="txtTenDanhMuc_TextChanged"/>
                    </StackPanel>
                </Grid>

                <!-- GHI CHÚ / MÔ TẢ -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Mô tả:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtMoTa"
                             Height="60"
                             Padding="5"
                             BorderBrush="#CBD5E1"
                             BorderThickness="1"
                             TextWrapping="Wrap"
                             AcceptsReturn="True" TextChanged="txtMoTa_TextChanged"/>
                </StackPanel>

                <!-- BẢNG DỮ LIỆU -->
                <DataGrid x:Name="dgDanhMuc"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F1F5F9"
                          RowHeight="36"
                          GridLinesVisibility="Horizontal"
                          BorderBrush="#E2E8F0"
                          BorderThickness="1"
                          Background="White"
                          Margin="0,0,0,15"
                          FontSize="14"
                          SelectionChanged="dgDanhMuc_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã" Binding="{Binding Ma}" Width="*" />
                        <DataGridTextColumn Header="Tên danh mục" Binding="{Binding Ten}" Width="2*" />
                        <DataGridTextColumn Header="Mô tả" Binding="{Binding MoTa}" Width="3*" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- NÚT CHỨC NĂNG -->
                <UniformGrid Columns="3" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Thêm mới"
                            Width="150"
                            Height="38"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="8,0"
                            Click="BtnThem_Click"/>

                    <Button Content="Sửa"
                            Width="150"
                            Height="38"
                            Background="#F59E0B"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="8,0"
                            Click="BtnSua_Click"/>

                    <Button Content="Xóa"
                            Width="150"
                            Height="38"
                            Background="#DC2626"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="8,0"
                            Click="BtnXoa_Click"/>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
